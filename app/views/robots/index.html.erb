<h1>Robots</h1>
<table>
	<tr><th><b>Name </b></th><th><b> Type</b></th><th><b>Serial Number</b></th></tr>
	<% @robots.each do |values| %>
			<tr>
				<td><%=values.name%></td>
				<td><%=values.r_type%></td>
				<td><%=values.serial_number%></td>
				<td><%= link_to 'Edit', edit_robot_path(values) %></td>
				<td><%= link_to 'Destroy', robot_path(values), method: :delete %></td>
				
			</tr>
			
	<% end %>
</table>
<%= link_to "New Robot" ,new_robot_path %>


